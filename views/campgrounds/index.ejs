<%- include("../partials/header") %> 

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4"><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p class="lead">Best campgrounds on the f*#king planet!</p>
            <a href="/campgrounds/new" role="button" class="btn btn-primary">Add New Campground</a>
        </div>
    </div>
    
    <div id="camps" class="row align-items-start">
        <% campgrounds.forEach(campground => { %>
            <div class="col-6 col-md-4 col-lg-3 mb-3">
                <a href="/campgrounds/<%= campground._id %> ">
                    <div class="card">
                        <img class="card-img-top" src= <%= campground.image %> alt="Card image cap">
                        
                        <h6 class="card-title text-center font-weight-normal mt-2"> <%= campground.name %> </h6>
                    </div>
                </a>
            </div>
        <% }); %> 
    </div>
</div>


 

